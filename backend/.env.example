# Vari√°veis de Ambiente - AbraCann Backend

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/abracann_dev"

# JWT & Auth
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="15m"
REFRESH_TOKEN_EXPIRATION="7d"

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="noreply@abracann.com"
SMTP_FROM_NAME="AbraCann"

# API Configuration
NODE_ENV=development
API_PORT=3001
API_URL=http://localhost:3001

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:3000

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-for-aes256
ENCRYPTION_ALGORITHM=aes-256-gcm

# n8n Webhooks
N8N_WEBHOOK_URL=http://localhost:5678/webhook/api
N8N_API_KEY=your-n8n-api-key

# Storage (AWS S3 ou similiar - opcional)
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=
AWS_S3_SECRET_KEY=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Prisma
DATABASE_URL_SHADOW=

# Feature Flags
FEATURE_MFA=false
FEATURE_PAGAMENTOS=false
