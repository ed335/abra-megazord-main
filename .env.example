# ==============================================
# ABRACANM - Variáveis de Ambiente
# ==============================================
# Copie este arquivo para .env e configure os valores

# ----------------------------------------------
# OBRIGATÓRIAS
# ----------------------------------------------

# Conexão com PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/abracanm?schema=public"

# Segredo JWT (gere um valor único e seguro)
# Exemplo: openssl rand -base64 32
JWT_SECRET="sua-chave-secreta-muito-segura-aqui"

# ----------------------------------------------
# PORTAS (opcionais, têm valores padrão)
# ----------------------------------------------

# Porta do frontend Next.js
PORT=5000

# Porta do backend NestJS
API_PORT=3001
API_HOST=0.0.0.0

# URL pública da aplicação
NEXT_PUBLIC_APP_URL="https://seudominio.com.br"

# URL do backend API (se diferente do frontend)
NEXT_PUBLIC_API_URL="https://api.seudominio.com.br"

# ----------------------------------------------
# PAGAMENTOS - Syncpay (opcional)
# ----------------------------------------------

SYNCPAY_API_URL="https://api.syncpayments.com.br"
SYNCPAY_CLIENT_ID="seu-client-id"
SYNCPAY_CLIENT_SECRET="seu-client-secret"
SYNCPAY_WEBHOOK_SECRET="seu-webhook-secret"

# ----------------------------------------------
# VIDEOCHAMADA - Agora.io (opcional)
# ----------------------------------------------

AGORA_APP_ID="seu-app-id"
AGORA_APP_CERTIFICATE="seu-app-certificate"
NEXT_PUBLIC_AGORA_APP_ID="seu-app-id"

# ----------------------------------------------
# EMAIL - SMTP (opcional)
# ----------------------------------------------

SMTP_HOST="smtp.seuservidor.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="seu-email@seudominio.com"
SMTP_PASS="sua-senha"
SMTP_FROM='"ABRACANM" <noreply@abracanm.com>'

# ----------------------------------------------
# WHATSAPP - Evolution API (opcional)
# ----------------------------------------------

EVOLUTION_API_URL="https://sua-evolution-api.com"
EVOLUTION_API_KEY="sua-api-key"
EVOLUTION_INSTANCE="abracanm"

# ----------------------------------------------
# ADMIN SEED (apenas para seed inicial)
# ----------------------------------------------

SEED_ADMIN_EMAIL="admin@abracanm.com"
SEED_ADMIN_PASSWORD="sua-senha-admin"
